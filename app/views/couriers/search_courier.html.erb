<%= form_tag("/couriers/search_courier", :method => "get") do %>
   <%= label_tag(:courier_no, "Search Courier:") %>
   <%= text_field_tag(:courier_no) %>
   <%= submit_tag("Search") %>
<% end %>

<% if @courier.present? %>
  <p id="notice"><%= notice %></p>

  <p>
    <strong>User:</strong>
    <%= @courier.sender.full_name %>
  </p>

  <p>
    <strong>Weight:</strong>
    <%= @courier.weight %>
  </p>

  <p>
    <strong>Service type:</strong>
    <%= @courier.service_type %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= @courier.price %>
  </p>

  <p>
    <strong>Payment mode:</strong>
    <%= @courier.payment_mode %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= @courier.status %>
  </p>

  <p>
    <strong>Uniq ID:</strong>
    <%= @courier.serial_no %>
  </p>

<% elsif params[:courier_no].present? %>
  <h2>Record not found with given input.</h2>
<% else %>
  <p id="notice"><%= notice %></p>

  <h1>Couriers</h1>

  <table>
    <thead>
      <tr>
        <th>Sender</th>
        <th>Receiver</th>
        <th>Weight</th>
        <th>Service type</th>
        <th>Price</th>
        <th>Payment mode</th>
        <th>Status</th>
        <th>Uniq ID</th>

        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @couriers.each do |courier| %>
        <tr>
          <td><%= courier.sender.full_name %></td>
          <td><%= courier.receiver.full_name %></td>
          <td><%= courier.weight %></td>
          <td><%= courier.service_type %></td>
          <td><%= courier.price %></td>
          <td><%= courier.payment_mode %></td>
          <td><%= courier.status %></td>
          <td><%= courier.serial_no %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
<% end %>
<%= link_to 'Home', root_path %>